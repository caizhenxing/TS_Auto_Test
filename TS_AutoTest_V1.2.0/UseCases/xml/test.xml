<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./SeleniumUseCase.xsl"?>

<SUITE name="致友微博 测试用例 By Kiven">
  <SETTINGS browser="Chrome" application_url="http://weibo.kedacom.com/weibo/login"/>
  <TEST name="致友登录" timeout="1">
    <STEPS>
      <STEP index="1" type="Type.Input" name="输入邮箱" verify="输入成功">
        <XPATH>//input[@id='email']</XPATH>
        <VALUE>shenjialong@kedacom.com</VALUE>
      </STEP>
      <STEP index="2" type="Type.Input" name="输入密码" verify="输入成功">
        <XPATH>//input[@id='password']</XPATH>
        <VALUE>1</VALUE>
      </STEP>
      <STEP index="3" type="Type.Click" name="点击登录" verify="成功登录">
        <XPATH>//button[@class='login-submit']</XPATH>
        <VALUE></VALUE>
      </STEP>
      <STEP index="4" type="Type.CaptureScreenshot" name="截图" verify="截图成功">
        <XPATH></XPATH>
        <VALUE></VALUE>
      </STEP>
      <STEP index="5" type="Type.Click" name="点击会议管理" verify="进入会议管理页面">
        <XPATH>//a[@href='/meeting']</XPATH>
        <VALUE></VALUE>
      </STEP>
      <STEP index="6" type="Type.CaptureScreenshot" name="截图" verify="截图成功">
        <XPATH></XPATH>
        <VALUE></VALUE>
      </STEP>
    </STEPS>
  </TEST>
</SUITE>
